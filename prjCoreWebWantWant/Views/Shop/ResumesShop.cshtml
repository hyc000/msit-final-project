@section Styles
    {
    <style>
        /* 自定義 Single Product Area 的寬度和高度 */
        .card.single-product-area {
            transition: box-shadow 0.3s ease;
            border-radius: 20px;
            /* 添加過渡效果 */
        }

        /* 保持 Product Image 在容器中居中，並控制圖片的填充方式 */
        .product-img {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
            object-fit: cover;
            /* 保持圖片比例並填充整個容器，超出的部分會被裁剪 */
        }

        /* 滑鼠懸停時的陰影效果 */
        .single-product-area:hover {
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            /* 添加陰影效果 */
            transform: scale(1.05);
            /* 略微放大 */
        }

        .card-image {
            width: 100%;
            height: 250px;
            /* 這裡可以調整您想要的固定高度 */
            background-image: url('~/圖庫/500.png');
            background-size: 100% 100%;
            /* 確保背景圖片填滿div */
            background-repeat: no-repeat;
            /* 添加圓角效果 */
            border-radius: 20px;
        }

            /* 讓商品卡片中圖片範圍長一點，文字範圍小一點 */
            .card-image.flex-grow-1 {
                height: 300px;
            }

        .card-body.flex-grow-0 {
            height: 30px;
        }

        .shopping-cart-btn {
            padding: 10px;
            border: none;
            border-radius: 50%;
            font-size: 3em;
            cursor: pointer;
            position: absolute;
            right: 100px;
            top: 40px;
        }

        .cart-item-count {
            padding: 10px;
            border: none;
            border-radius: 20%;
            font-size: 0.4em;
            color: white;
            background-color: rgb(238, 38, 61);
            cursor: pointer;
            position: absolute;
            right: 80px;
            top: 60px;
        }

        .col-md-3 {
            margin-right: 90px;
        }

        /* 自訂 Modal 彈出視窗的樣式 */
        .modal-dialog.modal-dialog-end {
            margin-left: auto;
            /* 靠右邊對齊 */
            margin-right: 0px;
            /* 可自行調整與右邊的間距 */
            margin-top: 0px;
        }

        /* 調整 Modal 彈出時的寬度 */

        .modal-dialog.modal-dialog-end {
            max-width: 30%;
            /* 可自行調整寬度 */
        }

        .modal-content {
            height: 80vh;
            /* 調整為你需要的高度，這裡使用 vh 單位表示視窗高度的百分比 */
        }

        .modal img {
            width: 50px;
            height: 50px;
        }
    </style>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    }
