                <!-- footer -->
                <div class="modal-footer">
                    <h5 align="right">Total:</h5>
                    @*<input type="submit" value="buynow" class="btn btn-primary" />*@
                    <form action="@Url.Content("~/shop/checkout")" method="post">
                        <input type="submit" value="buynow" class="btn btn-primary" />
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br>

