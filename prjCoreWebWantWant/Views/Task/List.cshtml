                    </div>
                    <!-- Job Category Listing End -->
                </div>
                <!-- Right content -->
                <div class="col-xl-9 col-lg-9 col-md-8" id="Partial">
                    <!-- Featured_job_start -->
                    <section class="featured-job-area">
                        <div class="container">
                            <!-- Count of Job list Start -->
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="count-job mb-35">
                                        <span>共 @Model.Count() 筆資料</span>
                                        <!-- Select job items start -->
                                        <div class="select-job-items">
                                            <span>排序</span>

                                            <form id="sort">
                                                <select name="selectSort">
                                                <option value="">無</option>
                                                <option value="">更新 新->舊</option>
                                                <option value="salaryHighToLow">薪資 高->低</option>
                                                <option value="">薪資 低->高</option>
                                                </select>
                                            </form>
                                            
                                        </div>
                                        <!--  Select job items End-->
                                    </div>
                                </div>
                            </div>
                            <!-- Count of Job list End -->
                            <!-- single-job-content -->
                            @foreach (var item in Model)
                            {
                                <div class="single-job-items mb-30" style="border:groove;">
                                    @*工作列表*@
                                    <div class="job-items">
                                        @*<div class="company-img">
                                    <a href="#"><img src="assets/img/icon/job-list1.png" alt=""></a>
                                          </div>*@
                                        <div class="job-tittle job-tittle2">
                                            <a href="#">
