@section Scripts{
    <script>
        const selCategory = document.querySelector('#selectCategory');

        selCategory.addEventListener('change', () => {
            const xhr = new XMLHttpRequest();
            xhr.open('POST', '@Url.Content("~/Task/Partial")');
            xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhr.send(`Category=${selCategory.value}`);
            xhr.addEventListener('load', () => {
                const Partial = document.querySelector('#Partial');
                Partial.innerHTML = xhr.responseText;
            })
        })

    </script>
}
