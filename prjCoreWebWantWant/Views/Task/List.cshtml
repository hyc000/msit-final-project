                                            </a>
                                            <ul>
                                                @*<li>@Html.DisplayFor(modelItem => item.TaskDetail)</li>*@
                                                <li><i class="fas fa-map-marker-alt"></i>@Html.DisplayFor(modelItem => item.Town.City.City1) @Html.DisplayFor(modelItem => item.Town.Town1) @*@ViewBag.CITY*@</li>
                                                <li>薪資：@Html.DisplayFor(modelItem => item.PayFrom) 元</li>
                                                <li>需求人數： @Html.DisplayFor(modelItem => item.RequiredNum) 人</li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="items-link items-link2 f-right">
                                        @*<a href="Details" onclick="Alert()">詳細資訊</a>*@
                                        @*@Html.ActionLink("詳細資訊", "Detail", new { id=item.CaseId })*@
                                        <a href="@Url.Action("Detail", new { id=item.CaseId })" target="_blank" style="color: #528eaf">詳細資訊</a>
                                        @*<a href="job_details.html">收藏</a>*@
                                        @*<span> @Html.DisplayFor(modelItem => item.TaskStart)</span>*@
                                    </div>
                                </div>
                            }
